<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>Main</servlet-name>
        <servlet-class>servlets.MainServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Games</servlet-name>
        <servlet-class>servlets.GamesServlet</servlet-class>
    </servlet>


    <servlet>
        <servlet-name>Crocodile</servlet-name>
        <servlet-class>servlets.CrocodileServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Mafia</servlet-name>
        <servlet-class>servlets.MafiaServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Predictions</servlet-name>
        <servlet-class>servlets.PredictionsServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AboutUs</servlet-name>
        <servlet-class>servlets.AboutUsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AboutUs</servlet-name>
        <url-pattern>/about-us</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Predictions</servlet-name>
        <url-pattern>/predictions</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Mafia</servlet-name>
        <url-pattern>/mafia</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Crocodile</servlet-name>
        <url-pattern>/crocodile</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Games</servlet-name>
        <url-pattern>/games</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Main</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>
</web-app>